@model IEnumerable<Factura>
    <a asp-controller="Bill"
            asp-action="Index"
            type="button" class="btn btn-primary mb-3">
    Add new invoice
    </a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">ID Locatie</th>
            <th scope="col">Nr Factura</th>
            <th scope="col">Data</th>
            <th scope="col">Client</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <th scope="row">@factura.IdFactura</th>
                <td>@factura.IdLocatie</td>
                <td>@factura.NumarFactura</td>
                <td>@factura.DataFactura.ToString("MM/dd/yyyy")</td>
                <td>@factura.NumeClient</td>
                <td>
                    <a asp-controller="Bill"
                       asp-action="EditFactura"
                       asp-route-id="@factura.IdFactura"
                       type="button" class="btn btn-primary">
                        Edit
                    </a>
                </td>

            </tr>
        }
        </tbody>
</table>

